<%- include("../partials/header"); -%>
<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Edit <%=outfit.name%></h1>
		<div style="width: 30%; margin:25px auto;">
			<form action="/outfits/<%=outfit._id%>/?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="outfit[name]" value="<%=outfit.name%>">
				</div>

				<div class="form-group">
					<input class="form-control" type="text" name="outfit[image]" value="<%=outfit.image%>">
				</div>

				<div class="form-group">
					<input class="form-control" type="text" name="outfit[description]" value="<%=outfit.description%>">
				</div>

				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
				</div>
			</form>
			<a href="/outfits">Back</a>
		</div>
	</div>
</div>
<%- include("../partials/footer"); -%>
